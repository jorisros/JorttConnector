{
    "name": "jorisros/jortt-connector",
    "description": "A connector for the API of the online accounting software Jortt.",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "license": "GNU GPLv3",
    "authors": [
        {
            "name": "Joris Ros",
            "email": "joris.ros@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "JorttConnector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=PSR12 src",
        "test": "vendor/bin/phpunit"
    }
}
